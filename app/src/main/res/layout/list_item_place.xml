<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_margin"
    android:layout_marginBottom="@dimen/card_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/placePic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/photoPlaceholder"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_margin="10dp"
                android:contentDescription="place_pic" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balthazar's Restaurant"
                    android:id="@+id/placeName"
                    style="@style/PlaceTitleStyle"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/gps"
                        android:layout_height="30dp"
                        android:id="@+id/categoryIcon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Breakfast Spot in Manhattan"
                        android:id="@+id/placeCategory"
                        android:textAllCaps="true"
                        style="@style/PlaceSubtitleStyle"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View style="@style/ListDivider"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/gps"
                android:layout_height="30dp"
                android:id="@+id/locationIcon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="41110 West Avenue Street"
                android:id="@+id/placeAddress"
                android:textAllCaps="true"
                style="@style/PlaceSubtitleStyle2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e1e9f0">

            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/share"
                android:layout_height="30dp"
                android:id="@+id/shareButton"
                android:layout_weight="1"
                android:layout_margin="15dp" />

            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/bookmark"
                android:layout_height="30dp"
                android:id="@+id/saveButton"
                android:layout_weight="1"
                android:layout_margin="15dp" />

            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/explore"
                android:layout_height="30dp"
                android:id="@+id/exploreButton"
                android:layout_weight="1"
                android:layout_margin="15dp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
